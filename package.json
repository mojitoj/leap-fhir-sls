{
  "name": "leap-fhir-sls",
  "version": "0.1.0",
  "description": "LEAP FHIR Security Labeling Service (SLS)",
  "keywords": [
    "FHIR",
    "SLS"
  ],
  "contributors": [
    "Mohammad Jafari <jafarim@gmail.com> (https://github.com/mojitoj/)"
  ],
  "main": "index.js",
  "repository": "git@github.com:mojitoj/leap-fhir-sls.git",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "start-mon": "npx nodemon server.js",
    "start": "node server.js",
    "test": "npm run db:test:setup && jest --runInBand --forceExit",
    "format": "npx prettier --write \"./**/*.js\"",
    "create-env": "printenv > .env",
    "db:generate": "npx drizzle-kit generate",
    "db:local:start": "docker-compose up -d",
    "db:dev:push": "NODE_ENV=dev npx drizzle-kit push",
    "db:test:push": "NODE_ENV=test npx drizzle-kit push",
    "db:dev:migrate": "NODE_ENV=dev npx drizzle-kit migrate",
    "db:test:migrate": "NODE_ENV=test npx drizzle-kit migrate",
    "db:dev:setup": "NODE_ENV=dev npm run db:generate && npm run db:dev:push && npm run db:dev:migrate",
    "db:test:setup": "NODE_ENV=test npm run db:generate && npm run db:test:push && npm run db:test:migrate",
    "db:prod:migrate": "NODE_ENV=prod npx drizzle-kit migrate",
    "db:prod:push": "NODE_ENV=prod npx drizzle-kit push",
    "db:local:stop": "docker-compose down"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx precise-commits"
    }
  },
  "devDependencies": {
    "drizzle-kit": "^0.24.2",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "nock": "^13.5.4",
    "nodemon": "^3.1.4",
    "precise-commits": "^1.0.2",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.33.0",
    "express": "^4.19.2",
    "jsonpath-plus": "^9.0.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "pg": "^8.13.0",
    "superagent": "^10.0.2",
    "winston": "^3.14.2"
  },
  "packageManager": "yarn@3.6.4",
  "engines": {
    "yarn": "^3.6.4",
    "node": "20"
  }
}
